{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') and (is_granted('ROLE_SUPER_ADMIN') or object.category != constant('META_CATEGORY', object))%}
    <a href="{{ admin.generateObjectUrl('edit', object) }}" class="btn btn-sm btn-default edit_link" title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}">
        <i class="fa fa-pencil"></i>
        {{ 'action_edit'|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}
